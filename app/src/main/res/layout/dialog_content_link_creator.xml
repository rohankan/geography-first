<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginEnd="20dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/dialog_content_link_creator_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:singleLine="false"
            android:text="Medium Text"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

        <EditText android:id="@+id/dialog_content_link_creator_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:singleLine="false"
            android:inputType="textCapSentences|textAutoComplete|textMultiLine" />
        <include android:layout_marginLeft="15dp" android:layout_marginTop="3dp" android:layout_marginBottom="3dp" android:layout_marginRight="15dp" layout="@layout/line_separator"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        <TextView android:id="@+id/dialog_content_link_creator_recycler_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="20dp"
            android:singleLine="false" />
        <include android:layout_marginLeft="15dp" android:layout_marginBottom="3dp" android:layout_marginRight="15dp" layout="@layout/line_separator"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        <android.support.v7.widget.RecyclerView android:id="@+id/dialog_content_link_creator_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" >

        </android.support.v7.widget.RecyclerView>
        <include android:layout_marginLeft="15dp" android:layout_marginTop="3dp" android:layout_marginRight="15dp" layout="@layout/line_separator"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
        <TextView android:id="@+id/dialog_content_link_creator_category_viewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:singleLine="false"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

        <ImageButton android:id="@+id/dialog_content_link_creator_back_button"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_action_back"
            android:contentDescription="@string/go_backcat_selection"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/dialog_content_link_creator_popup_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:singleLine="false"
            android:visibility="gone"
            android:textColor="@color/red"
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</ScrollView>