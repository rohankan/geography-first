<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_holder="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contents_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView android:id="@+id/info_subcat_content_card_holder_add_delete_holder_fixed"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_holder:cardElevation="3dp">

        <LinearLayout android:id="@+id/info_subcat_content_card_holder_link_holder"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:baselineAligned="false"
            android:layout_height="wrap_content">
                <TextView android:id="@+id/info_subcat_content_card_holder_popup"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1.6"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    android:gravity="center"
                    android:visibility="gone"
                    />

                    <Button android:id="@+id/info_subcat_contents_card_holder_g_maps_button_fixed"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/gmapslink"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/button_orange"
                        android:background="?attr/selectableItemBackground"/>

                    <Button android:id="@+id/info_subcat_contents_card_holder_image_button_fixed"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginStart="5dp"
                        android:text="@string/image"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/button_orange"
                        android:background="?attr/selectableItemBackground"/>

                    <Button android:id="@+id/info_subcat_contents_card_holder_content_button_fixed"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/contentlink"
                        android:textColor="@color/button_orange"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageButton android:id="@+id/info_subcat_contents_card_holder_switcheroo_button_fixed"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_action_switcheroo"
                        android:contentDescription="@string/stoo"
                        android:background="?attr/selectableItemBackground"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--<ScrollView
        android:id="@+id/info_subcat_content_scroll_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:overScrollMode="ifContentScrolls"
        android:layout_height="wrap_content">-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/info_subcat_content_card_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                card_holder:cardElevation="3dp">

                <LinearLayout android:id="@+id/info_subcat_content_card_holder_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/info_subcat_content_card_holder_recycler_view"
                        android:overScrollMode="ifContentScrolls"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout android:id="@+id/hiddenleftrightbuttonholder"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent" />

                <android.support.v7.widget.CardView
                    android:id="@+id/info_subcat_contents_bottom_card_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    card_holder:cardElevation="3dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_height="match_parent">

                            <Button android:id="@+id/info_subcat_contents_card_holder_previous_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:textColor="@color/button_orange"
                                android:background="?attr/selectableItemBackground"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_height="match_parent">

                            <Button android:id="@+id/info_subcat_contents_card_holder_next_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:padding="2dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/button_orange"
                                android:background="?attr/selectableItemBackground"/>

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    <!--</ScrollView>-->

</LinearLayout>