<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_holder="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView android:id="@+id/info_subcat_content_card_holder_add_delete_holder_fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_holder:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout android:id="@+id/result_activity_flashcard_button_holder"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">

                    <Button android:id="@+id/result_activity_flashcard_image_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Image"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/button_orange"
                        android:background="?attr/selectableItemBackground"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content">

                    <Button android:id="@+id/result_activity_flashcard_gmaps_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Add Google Maps"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/button_orange"
                        android:background="?attr/selectableItemBackground"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="0.025"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="0.025"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/result_activity_flashcard_main_title_tv"
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:textAppearance="?android:textAppearanceButton"
                    android:text="Title:"
                    android:singleLine="true"
                    android:layout_height="wrap_content" />
                <EditText android:id="@+id/result_activity_flashcard_main_edit_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:paddingTop="5dp"
                        android:singleLine="false"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/result_activity_flashcard_title_edit_text" />

                    <include layout="@layout/line_separator" />

                    <ImageView android:id="@+id/result_activity_flashcard_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/result_activity_flashcard_gmaps_card_view"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        card_holder:cardElevation="1dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        card_holder:cardUseCompatPadding="true"
                        card_holder:cardCornerRadius="3dp"
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="wrap_content"
                        android:paddingTop="1dp">
                        <TextView android:id="@+id/result_activity_flashcard_gmaps_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="false"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="1dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginBottom="1dp"
                            android:textColor="@color/black"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:background="@drawable/transp_map_img"
                            android:gravity="center"/>
                    </android.support.v7.widget.CardView>

                    <EditText
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:paddingTop="5dp"
                        android:singleLine="false"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:layout_marginBottom="3dp"
                        android:id="@+id/result_activity_flashcard_body_edit_text" />

                </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>